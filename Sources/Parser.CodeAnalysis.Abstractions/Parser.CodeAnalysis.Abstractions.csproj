<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <LangVersion>default</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <AssemblyName>P3Model.Parser.CodeAnalysis.Abstractions</AssemblyName>
        <RootNamespace>P3Model.Parser.CodeAnalysis</RootNamespace>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>0.2.0</Version>
        <AssemblyVersion>0.2.0</AssemblyVersion>
        <FileVersion>0.2.0</FileVersion>
        <Title>P3 Model Code Analysis Anstractions</Title>
        <Description>P3 Model Code Analysis Anstractions is a set of base abstractions to build custom code analyzers for P3 Model Parser.</Description>
        <Authors>Marcin Markowski</Authors>
        <Company>P3 Model</Company>
        <PackageProjectUrl>https://github.com/P3-model/P3-model-dotnet</PackageProjectUrl>
        <RepositoryUrl>https://github.com/P3-model/P3-model-dotnet</RepositoryUrl>
        <PackageLicenseExpression>CC-BY-SA-4.0</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>logo.png</PackageIcon>
        <PackageReleaseNotes>filtering Elements with predicate</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.CodeAnalysis" Version="4.9.2" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Parser.ModelSyntax\Parser.ModelSyntax.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Update="README.md" Pack="true" PackagePath="\" />
        <None Include="..\..\logo.png">
            <Pack>True</Pack>
            <PackagePath/>
            <Link>logo.png</Link>
        </None>
        <None Update="README.md">
          <Pack>true</Pack>
          <PackagePath>/</PackagePath>
        </None>
    </ItemGroup>
</Project>
